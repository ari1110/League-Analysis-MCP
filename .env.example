# Yahoo App Credentials
# Get these from https://developer.yahoo.com/apps/
# REQUIRED: Create Yahoo Developer App with redirect URI: https://localhost:8080/
YAHOO_CONSUMER_KEY=your_consumer_key_here
YAHOO_CONSUMER_SECRET=your_consumer_secret_here

# OAuth Access Token (automatically generated via MCP tools)
# This gets populated automatically when you complete OAuth setup
# YAHOO_ACCESS_TOKEN_JSON={"access_token":"...","refresh_token":"...","token_type":"bearer","expires_in":3600,"consumer_key":"...","consumer_secret":"..."}

# OAuth Configuration
# These are set automatically by the enhanced auth system
# YAHOO_OAUTH_REDIRECT_URI=https://localhost:8080/
# YAHOO_TOKEN_FILE_PATH=.yahoo_token.json

# Caching Configuration (optional)
# Historical data cached permanently, current data cached for 5 minutes
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=100
ENABLE_HISTORICAL_CACHE=true

# Development Configuration (optional)
# LOG_LEVEL=INFO
# OAUTH_CALLBACK_TIMEOUT=300